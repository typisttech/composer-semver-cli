{
  "name": "typisttech/composer-semver-cli",
  "description": "TODO!",
  "license": "MIT",
  "type": "project",
  "keywords": [
    "cli",
    "semver",
    "semantic",
    "versioning",
    "validation"
  ],
  "authors": [
    {
      "name": "Typist Tech",
      "homepage": "https://typist.tech"
    },
    {
      "name": "Tang Rufus",
      "email": "tangrufus@gmail.com",
      "homepage": "https://tangrufus.com",
      "role": "Developer"
    }
  ],
  "homepage": "https://github.com/typisttech/composer-semver-cli",
  "support": {
    "issues": "https://github.com/typisttech/composer-semver-cli/issues",
    "source": "https://github.com/typisttech/composer-semver-cli"
  },
  "require": {
    "php": "~8.4.12",
    "composer/semver": "^3.4",
    "symfony/console": "^7.3"
  },
  "autoload": {
    "psr-4": {
      "TypistTech\\ComposerSemVer\\": "src/"
    }
  },
  "bin": [
    "bin/composer-semver"
  ],
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "phpstan/extension-installer": true
    },
    "platform-check": false
  },
  "require-dev": {
    "phpstan/extension-installer": "^1.4",
    "phpstan/phpstan": "^2.1",
    "phpstan/phpstan-deprecation-rules": "^2.0",
    "phpstan/phpstan-strict-rules": "^2.0",
    "phpstan/phpstan-symfony": "^2.0"
  },
  "scripts": {
    "phar": [
      "@composer install --no-dev --prefer-dist",
      "@composer reinstall --prefer-dist '*'",
      "box compile",
      "box verify phar/composer-semver",
      "box info phar/composer-semver",
      "@php phar/composer-semver info"
    ],
    "compile": [
      "@phar",
      "spc craft",
      "mkdir -p out",
      "spc micro:combine phar/composer-semver --output out/composer-semver",
      "out/composer-semver info"
    ]
  }
}
